
@model IEnumerable<FileUpload.Models.MyFile>
@{
    ViewData["Title"] = "Добавление файла";
}
<h3>Выберите файл для загрузки</h3>
<form asp-action="AddFile" asp-controller="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" name="uploadedFile" />
    </div>
    <div class="form-group">
        <label class="control-label">Короткое описание:</label>
        <input class="form-control" type="text" id="simpleDescr" />
    </div>
    <div class="form-group">
        <label class="control-label">Полное описание:</label>
        <input class="form-control" type="text" id="description" />
        </div>
        <input type="submit" value="Загрузить" />
</form>

<h3>Все файлы</h3>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Путь</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
        <tr>
            <td>@Url.Content(f.Id.ToString())</td>
            <td>@Url.Content(f.Name)</td>
            <td>@Url.Content(f.Path)</td>
            <td>@Url.Content(f.SimpleDescr)</td>
            <td><a asp-action="Details" asp-route-id="@f.Id">Детали</a></td>
        </tr>
        }
    </tbody>
</table>
