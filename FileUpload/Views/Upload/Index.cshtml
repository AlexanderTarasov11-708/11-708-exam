@model FileUpload.Models.MyFile
@{
    ViewData["Title"] = "Добавление файла";
}
<h3>Выберите файл для загрузки</h3>
<form asp-action="AddFile" asp-controller="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label">Короткое описание:</label>
        <input class="form-control" type="text" name="shortDescription" />
    </div>
    <div class="form-group">
        <label class="control-label">Полное описание:</label>
        <textarea class="form-control" name="longDescription"></textarea>
    </div>
    <div class="form-group">
        <input type="file" name="uploadedFile" />
    </div>
    <input type="submit" value="Загрузить" />
</form>
